<h1 class="mt-2 mb-2 text-center">All comments</h1>

<div class="container">
    <div class="row">
        <div class="col">


            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>OWNER</th>
                        <th>CONTENT</th>
                        <th>DATE</th>
                        <th>DELETE</th>
                    </tr>
                    </thead>

                    <tbody>

                {{#each comments}}
                    <tr>
                        <td>{{_id}}</td>
                        <td>{{user.firstName}}</td>
                        <td>{{body}}</td>
                        <td>{{generateDate date 'Do MMMM YYYY'}}</td>
                        <td>
                            <form action="/admin/comments/delete/{{_id}}?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete?')" >
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                {{/each}}

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
