<h1 class="text-center mt-3 mb-2">All Categories</h1>

<!-- Form for adding category-->
<div class="container">
    <div class="row justify-content-center mb-3">
        <div class="col col-md-6">
            <form action="/admin/categories/store?_method=POST" method="post">
                <div class="input-group">


                    <input type="text" name="name" class="form-control" placeholder="Add New Category">
                    <button type="submit" class="btn btn-primary">Submit</button>


                </div>
            </form>
        </div>
    </div>


    <!-- Row for categories table-->
    <div class="row justify-content-center">
        <div class="col col-md-8">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Category name</th>
                    <th colspan="2">Action</th>
                </tr>
                </thead>

                <tbody>
                 {{#each categories}}
                     <tr>
                         <td>{{_id}}</td>
                         <td>{{name}}</td>
                         <td><a href="/admin/categories/edit/{{_id}}" class="btn btn-success btn-sm">Edit</a></td>
                         <td>
                             <form action="/admin/categories/delete/{{_id}}?_method=DELETE" method="post">
                                 <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                             </form>
                         </td>
                     </tr>
                 {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>
