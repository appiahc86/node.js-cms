<div class="row justify-content-center mb-3">
    <div class="col col-md-6">
        <h1 class="text-center">Edit Category</h1>
        <form action="/admin/categories/update/{{category._id}}?_method=PATCH" method="post">
            <div class="input-group">

                <input type="text" name="name" class="form-control" placeholder="Add New Category" value="{{category.name}}">
                <button type="submit" class="btn btn-primary">Update</button>

            </div>
        </form>
    </div>
</div>